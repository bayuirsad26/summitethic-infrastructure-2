[user]
    name = SummitEthic DevOps
    email = devops@summitethic.com

[core]
    editor = vim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore
    autocrlf = input
    fileMode = false

[color]
    ui = auto

[push]
    default = simple

[pull]
    rebase = true

[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    amend = commit --amend

[diff]
    tool = vimdiff

[merge]
    tool = vimdiff
    conflictstyle = diff3

[help]
    autocorrect = 1

[url "git@github.com:"]
    insteadOf = gh:

[url "git@gitlab.com:"]
    insteadOf = gl:

[credential]
    helper = cache --timeout=3600